<tool id="contamin_filter" name="CONFILT" version="0.1.0">
    <description>Filter MaxQuant output file by keyworks or values</description>
    <requirements>
    </requirements>
    <stdio>
        <exit_code range="1:" />
    </stdio>
    <command><![CDATA[
        python3 filter.py -i "$input1" -o "$output1"
        #if options.protein_IDs:
            --protein_IDs options.protein_IDs
        #end if
        #if options.protein_names:
            --protein_names options.protein_names
        #end if
        #if options.gene_names:
            --gene_names options.gene_names
        #end if
        #if options.fasta_headers:
            --fasta_headers options.fasta_headers
        #end if
        #if options.number_of_proteins:
            --number_of_proteins options.number_of_proteins
        #end if
        #if options.peptides:
            --peptides options.peptides
        #end if
        #if options.q_value:
            --q_value options.q_value
        #end if
        #if options.score:
            --score options.score
        #end if
        #if options.intensity:
            --intensity options.intensity
        #end if
        #if options.iBAQ:
            --iBAQ options.iBAQ
        #end if
    ]]></command>
    <inputs>
        <param type="data" name="input1" format="txt" />
        <section name="advanced" title="Options" expanded="False">
            <param argument="--protein_IDs" type="text" label="Protein IDs" optional="True" />
            <param argument="--protein_names" type="text" label="Protein names" optional="True" />
            <param argument="--gene_names" type="text" label="Gene names" optional="True" />
            <param argument="--fasta_headers" type="text" label="FASTA headers" optional="True" />
            <conditional name="nop">
                <param argument="--number_of_proteins" type="select" label="Number of proteins" >
                    <option value="1">Equal</option>
                    <option value="2">2</option>
                    <option value="3">"3"</option>
                    <option value="4">"4"</option>
                    <option value="5">"5"</option>
                </param>
                <when value="1">
                    <param type="integer" name="val" />
                </when>
                <when value="2">
                    <param type="integer" name="val" />
                </when>
                <when value="3">
                    <param type="integer" name="val" />
                </when>
                <when value="4">
                    <param type="integer" name="val" />
                </when>
                <when value="5">
                    <param type="integer" name="val" />
                </when>
            </conditional>
            <param argument="--peptides" type="integer" label="Peptides" optional="True" />
            <param argument="--q_value" type="float" label="Q-value" optional="True" />
            <param argument="--score" type="float" label="Score" optional="True" />
            <param argument="--intensity" type="integer" label="Intensity" optional="True" />
            <param argument="--iBAQ" type="float" label="iBAQ" optional="True" />
        </section>
    </inputs>
    <outputs>
        <data name="output1" format="txt" />
    </outputs>
    <tests>
        <test>
            <param name="input1" value="proteinGroups_Maud.txt"/>
            <param name="iBAQ" value="345" />
            <output name="output1" file="meo.txt"/>
        </test>
    </tests>
    <help><![CDATA[
        This is help
    ]]></help>
    <citations>
    </citations>
</tool>
